@* Views/Shared/_Layout.cshtml *@
@inject IWebHostEnvironment Environment
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MyProject</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Menüyü Değiştir">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")">
                    <a class="nav-link" asp-controller="Content" asp-action="Index">Ana Sayfa</a>
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "Edit" ? "active" : "")">
                    <a class="nav-link" asp-controller="Content" asp-action="Edit">İçerik Düzenle</a>
                </li>
                <li class="nav-item @(ViewContext.RouteData.Values["action"]?.ToString() == "ConvertedContent" ? "active" : "")">
                    <a class="nav-link" asp-controller="Content" asp-action="ConvertedContent">Dönüştürülmüş İçerik</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Changed container to container-fluid -->
    <div class="container-fluid mt-4">
        @RenderBody()
    </div>

    <!-- Core libraries first -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Modular JavaScript in dependency order -->
    @if (Environment.IsDevelopment())
    {
        <!-- Individual scripts for development -->
        <script src="~/js/modules/notifications.js"></script>
        <script src="~/js/modules/api.js"></script>
        <script src="~/js/modules/categoryManager.js"></script>
        <script src="~/js/modules/subcategoryManager.js"></script>
        <script src="~/js/modules/formValidation.js"></script>
        <script src="~/js/main.js"></script>
    }
    else
    {
        <!-- Bundled scripts for production -->
        <script src="~/js/site.min.js" asp-append-version="true"></script>
    }

    @RenderSection("Scripts", required: false)
</body>
</html>