@using TestKB.Models
@{
    Layout = null;
    ViewData["Title"] = "Departman Seçimi";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TestKB</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
</head>
<body>
    <div class="d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="card p-4">
            <h4 class="card-title text-center mb-3">Departman Seçimi</h4>
            <div class="card-body">
                <form asp-action="SelectDepartment" method="post">
                    <div class="form-group">
                        <label for="DepartmentSelect">Departman</label>
                        <select class="form-control" id="DepartmentSelect" name="department">
                            @foreach (var dept in Enum.GetValues(typeof(Department)))
                            {
                                <option value="@dept">@dept</option>
                            }
                        </select>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Seç</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
